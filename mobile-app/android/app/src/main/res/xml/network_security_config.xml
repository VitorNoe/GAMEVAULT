<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Allow cleartext traffic for local development -->
    <base-config cleartextTrafficPermitted="true">
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </base-config>

    <!-- Specific domains for development -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">10.0.2.2</domain>
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">127.0.0.1</domain>
        <!-- Add your local IP here if using a physical device -->
        <!-- <domain includeSubdomains="true">192.168.1.X</domain> -->
    </domain-config>

    <!-- GitHub Codespaces domain (HTTPS, used by emulator to reach backend) -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">app.github.dev</domain>
        <trust-anchors>
            <certificates src="system" />
        </trust-anchors>
    </domain-config>
</network-security-config>
